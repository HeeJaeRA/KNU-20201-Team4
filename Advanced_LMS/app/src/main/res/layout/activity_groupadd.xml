<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_weight="0"
        android:background="#4F5254"
        app:srcCompat="@drawable/group_up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="420dp"
            android:layout_height="40sp"
            android:layout_weight="5"
            android:background="@color/bg_register"
            android:gravity="center"
            android:text="소모임 명"
            android:textColor="@color/btn_login_bg" />

        <EditText
            android:id="@+id/input_groupName"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:hint="소모임명 입력" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="420dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/bg_register"
            android:gravity="center"

            android:text="소모임소개"
            android:textColor="@color/btn_login_bg" />

        <EditText
            android:id="@+id/input_groupdescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="1"
            android:background="@drawable/logo_knu4"
            android:hint="소개말을 적어주세요" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@color/bg_register"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/btn_login_bg" />

        <RadioGroup
            android:id="@+id/register_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="자동 승인" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="승인 확인" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="등록" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>
